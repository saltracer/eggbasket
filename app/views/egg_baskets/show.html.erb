<%- model_class = EggBasket -%>
<div class="page-header">
  <h1><%=t '.title', :default => EggBasket %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:egg_count) %></dt>
      <dd><pre class="prettyprint"><%= @egg_basket.egg_count %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:collected_on) %></dt>
      <dd><pre class="prettyprint"><%= @egg_basket.collected_on %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              egg_baskets_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_egg_basket_path(@egg_basket), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              egg_basket_path(@egg_basket),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

