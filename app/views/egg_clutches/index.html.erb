<%- model_class = EggClutch -%>
<div class="page-header">
  <h1><%=t '.title', :default => EggClutch %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:count) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @egg_clutches.each do |egg_clutch| %>
      <tr>
        <td><%= egg_clutch.id %></td>
        <td><%= egg_clutch.count %></td>
        <td><%=l egg_clutch.created_at, format: :long %></td>
        <td>
          <%= link_to egg_clutch_path(egg_clutch), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%#= glyph 'info-sign' %>
            <%#= glyph 'pencil' %>
          <%- end -%>
          <%= link_to egg_clutch_path(egg_clutch), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%#= glyph 'remove' %>
            <%#= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_egg_clutch_path,
            :class => 'btn btn-primary' %>
